// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model premium_user {
  user_id Int
  email String
  fullname String
  username String
  password String
  profile_path String
  @@unique([user_id, email])
} 

model premium_user_content {
  user_id Int 
  premium_post_id Int
  @@unique([user_id, premium_post_id])
}

model exclusive_content {
  post_id Int @id @default(autoincrement())
  caption String
  descriptions String 
  post_time DateTime @default(now())
  likes Int @default(0)
  genre String 
}

model premium_admin {
  admin_id Int @id @default(autoincrement())
  email String
  fullname String
  username String
  password String
  profile_path String
}

